<Window x:Class="DFBackupAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="144" Width="308" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Locate 7za.exe" Click="Locate7zip" />
                <MenuItem Header="Locate Dwarf Fortress.exe" Click="LocateDF2010"/>
                <Separator />
                <MenuItem Header="Exit" />
            </MenuItem>
        </Menu>
        <Button Content="Start Game" Height="23" HorizontalAlignment="Left" Margin="12,6,0,0" Name="buttonLaunchDF" VerticalAlignment="Top" Width="75" Click="buttonLaunchDF_Click" ToolTip="Launches Dwarf Fortress" Grid.Row="1" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="12,8,0,0" Name="comboSaveSelect" VerticalAlignment="Top" Width="180" Grid.Row="2" />
        <Button Content="Back Up" Height="23" HorizontalAlignment="Left" Margin="198,8,0,0" Name="buttonBackup" VerticalAlignment="Top" Width="75" Click="buttonBackup_Click" Grid.Row="2" />
    </Grid>
</Window>
