<Window x:Class="DFBackupAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="190" Width="308" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Locate Dwarf Fortress.exe" Click="LocateDF2010"/>
                <MenuItem Header="Select Backup Save Folder" IsEnabled="False" />
                <Separator />
                <MenuItem Header="Exit" Click="menuExit_Click" />
            </MenuItem>
        </Menu>
        <Button Content="Start Game" Height="23" HorizontalAlignment="Left" Margin="12,0,0,0" Name="buttonLaunchDF" VerticalAlignment="Center" Width="75" Click="buttonLaunchDF_Click" ToolTip="Launches Dwarf Fortress" Grid.Row="1" />
        <Button Content="Refresh Save Listing" Grid.Row="1" Height="23" HorizontalAlignment="Right" Margin="0,0,12,0" Name="buttonRefreshSaves" VerticalAlignment="Center" Width="122" Click="PopulateSaveGames" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="12,8,0,0" Name="comboSaveSelect" VerticalAlignment="Top" Width="180" Grid.Row="2" />
        <Button Content="Back Up" Height="23" HorizontalAlignment="Left" Margin="198,8,0,0" Name="buttonBackup" VerticalAlignment="Top" Width="75" Click="buttonBackup_Click" Grid.Row="2" />
        <CheckBox Content="Erase Save After Backup" Grid.Row="2" Height="16" HorizontalAlignment="Left" Margin="130,38,0,0" Name="checkBoxEraseAfter" VerticalAlignment="Top" />
    </Grid>
</Window>
